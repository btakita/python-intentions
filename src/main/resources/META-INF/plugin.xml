<idea-plugin>
    <id>com.github.btakita.python-intentions</id>
    <name>Python Intentions</name>
    <vendor url="https://github.com/btakita">btakita</vendor>
    <description><![CDATA[
        Plugin that adds various intentions for the Python language.

        More will be added in following releases. Currently supports:

        Intention actions for converting between Python type annotation styles:
        <ul>
            <li><code>Optional[A]</code> → <code>A | None</code> (PEP 604 modern syntax)</li>
            <li><code>A | None</code> → <code>Optional[A]</code> (classic typing syntax)</li>
            <li><code>Union[A, B, C]</code> → <code>A | B | C</code></li>
            <li><code>A | B | C</code> → <code>Union[A, B, C]</code></li>
        </ul>

        Intention actions for managing <code>__all__</code>:
        <ul>
            <li>Add top-level name to <code>__all__</code></li>
            <li>Remove top-level name from <code>__all__</code></li>
            <li>Move <code>__all__</code> to PEP 8 position (after docstring and <code>__future__</code> imports, before other imports)</li>
        </ul>
    ]]></description>

    <depends>com.intellij.modules.python</depends>

    <extensions defaultExtensionNs="com.intellij">
        <intentionAction>
            <language>Python</language>
            <className>com.github.btakita.pythonintentions.OptionalToUnionIntention</className>
            <category>Python/Type annotations</category>
        </intentionAction>
        <intentionAction>
            <language>Python</language>
            <className>com.github.btakita.pythonintentions.UnionToOptionalIntention</className>
            <category>Python/Type annotations</category>
        </intentionAction>
        <intentionAction>
            <language>Python</language>
            <className>com.github.btakita.pythonintentions.UnionSubscriptionToPipeIntention</className>
            <category>Python/Type annotations</category>
        </intentionAction>
        <intentionAction>
            <language>Python</language>
            <className>com.github.btakita.pythonintentions.PipeToUnionSubscriptionIntention</className>
            <category>Python/Type annotations</category>
        </intentionAction>
        <intentionAction>
            <language>Python</language>
            <className>com.github.btakita.pythonintentions.MakeTypeMaybeIntention</className>
            <category>Python/Type annotations</category>
        </intentionAction>
        <intentionAction>
            <language>Python</language>
            <className>com.github.btakita.pythonintentions.MakeTypeNonMaybeIntention</className>
            <category>Python/Type annotations</category>
        </intentionAction>
        <intentionAction>
            <language>Python</language>
            <className>com.github.btakita.pythonintentions.AddToAllIntention</className>
            <category>Python/__all__</category>
        </intentionAction>
        <intentionAction>
            <language>Python</language>
            <className>com.github.btakita.pythonintentions.RemoveFromAllIntention</className>
            <category>Python/__all__</category>
        </intentionAction>
        <intentionAction>
            <language>Python</language>
            <className>com.github.btakita.pythonintentions.MoveAllToPep8PositionIntention</className>
            <category>Python/__all__</category>
        </intentionAction>
    </extensions>
</idea-plugin>
